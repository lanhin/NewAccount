<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lanhin.account">

    <uses-permission android:name="android.permission.READ_CALENDAR"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:name="com.lanhin.account.app.AccountApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.lanhin.account.ui.avtivity.MainTabActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- <activity -->
        <!-- android:name=".ui.avtivity.BaseActivity" -->
        <!-- android:theme="@style/AppTheme"/> -->
        <activity android:name="com.lanhin.account.ui.avtivity.BillDetailActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.BudgetActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.AddAccountActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.AddSortActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.AddUserDefineActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.CalendarActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.card.CardAddActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.card.CardBelongActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.card.TransferActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.BalanceActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.card.CardDetailActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.card.CardRemindActivity">
        </activity>

        <receiver
            android:name="com.lanhin.account.receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.xywallet.xyhd.alarm"/>
            </intent-filter>
        </receiver>

        <activity android:name="com.lanhin.account.ui.avtivity.RemindManagerActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.AccountRemindActivity">
        </activity>
        <activity android:name="com.lanhin.account.ui.avtivity.AccountRemindAddActivity">
